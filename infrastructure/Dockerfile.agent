# =============================================================================
# DOCKERFILE.AGENT - Agente con PyTorch CPU
# =============================================================================
# Versi칩n: 6.0
# =============================================================================

FROM public.ecr.aws/docker/library/python:3.10-slim

LABEL maintainer="equipo-desarrollo" \
      version="6.0" \
      description="Agente orquestador con PyTorch CPU"

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PIP_ROOT_USER_ACTION=ignore

WORKDIR /app

# =============================================================================
# FASE 1: Copiar requirements
# =============================================================================
COPY requirements.txt ./req-base-original.txt
COPY requirements-agent.txt ./req-agent-original.txt

# =============================================================================
# FASE 2: Limpiar requirements de dependencias problem치ticas
# =============================================================================
RUN grep -v -E "^(torch|torchvision|torchaudio|sentence-transformers|transformers|accelerate|huggingface-hub|safetensors|sympy)" \
    req-base-original.txt > requirements.txt || true && \
    grep -v -E "^(torch|torchvision|torchaudio|sentence-transformers|transformers|accelerate|huggingface-hub|safetensors|sympy)" \
    req-agent-original.txt > requirements-agent.txt || true

# =============================================================================
# FASE 3: Crear CONSTRAINTS
# =============================================================================
RUN echo "torch==2.5.1+cpu" > /tmp/constraints.txt && \
    echo "torchvision==0.20.1+cpu" >> /tmp/constraints.txt && \
    echo "torchaudio==2.5.1+cpu" >> /tmp/constraints.txt && \
    echo "sympy==1.13.1" >> /tmp/constraints.txt

# =============================================================================
# FASE 4: Instalar PyTorch CPU
# =============================================================================
RUN pip install \
    torch==2.5.1+cpu \
    torchvision==0.20.1+cpu \
    torchaudio==2.5.1+cpu \
    --index-url https://download.pytorch.org/whl/cpu

RUN python -c "import torch; print(f'[OK] PyTorch {torch.__version__}')"

# =============================================================================
# FASE 5: Instalar paquetes ML con CONSTRAINT
# =============================================================================
RUN pip install \
    -c /tmp/constraints.txt \
    sentence-transformers \
    transformers \
    accelerate \
    huggingface-hub \
    safetensors

# =============================================================================
# FASE 6: Instalar resto con CONSTRAINT
# =============================================================================
RUN pip install -c /tmp/constraints.txt -r requirements.txt || true
RUN pip install -c /tmp/constraints.txt -r requirements-agent.txt || true

# =============================================================================
# FASE 7: Verificaci칩n
# =============================================================================
RUN python -c "\
import torch; \
v = torch.__version__; \
assert v == '2.5.1+cpu', f'FALLO: {v}'; \
print('[OK] torch==2.5.1+cpu')"

# =============================================================================
# FASE 8: Usuario
# =============================================================================
RUN useradd --create-home --shell /bin/bash --uid 1000 --user-group apu_user && \
    mkdir -p /app/logs /app/data && \
    chown -R apu_user:apu_user /app && \
    rm -f /tmp/constraints.txt req-*-original.txt

USER apu_user

# =============================================================================
# FASE 9: C칩digo
# =============================================================================
COPY --chown=apu_user:apu_user agent/ /app/agent/

ENTRYPOINT ["python", "-u", "-m", "agent.apu_agent"]