# Use a slim Python base image
FROM python:3.10-slim

# Set the working directory in the container
WORKDIR /app

# Create a non-root user
RUN useradd -ms /bin/bash apu_user

# Copy the agent code into the container
COPY --chown=apu_user:apu_user agent/ /app/agent/
COPY --chown=apu_user:apu_user requirements-agent.txt .
COPY --chown=apu_user:apu_user requirements.txt .

# Install dependencies
RUN pip install uv
RUN chown -R apu_user:apu_user /app
USER apu_user

# PASO 1: Instalar PyTorch CPU expl√≠citamente
RUN pip install --no-cache-dir torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cpu

# PASO 2: Instalar dependencias del agente
COPY --chown=apu_user:apu_user requirements-agent.txt .
RUN uv pip install --system --no-cache-dir --requirement requirements-agent.txt

# Set the entrypoint to run the orchestrator
ENTRYPOINT ["python", "-u", "-m", "agent.orchestrator"]
